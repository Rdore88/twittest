<p id="notice"><%= notice %></p>

<% if current_user %>
  <%= link_to 'New Tweet', new_tweet_path %>
<% end %>

<h1>Latest Global Tweets</h1>

<table>
  <thead>
    <tr>
      <th>Message</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.message %></td>
        <td><%= link_to tweet.user.username, user_path(tweet.user_id) %></td>
        <td><%= link_to 'Show', tweet %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
